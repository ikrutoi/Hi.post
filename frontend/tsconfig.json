{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "@app/store": ["app/store/index.ts"],
      "@features/*": ["features/*"],
      "@api/*": ["api/*"],
      "@app/*": ["app/*"],
      "@i18n/*": ["i18n/*"],
      "@db/*": ["db/*"],
      "@components/*": ["components/*"],
      "@middleware/*": ["middleware/*"],
      "@hooks/*": ["hooks/*"],
      "@schemas/*": ["schemas/*"],
      "@store/*": ["store/*"],
      "@shared/*": ["shared/*"],
      "@utils/*": ["utils/*"],
      "@data/*": ["data/*"],
      "@locales/*": ["locales/*"],
      "@entities/*": ["entities/*"]
    }
  },
  "include": ["src"]
}
